{{#if patient.pid}}
  <h2>Modify patient</h2>
{{else}}
  <h2>New patient</h2>
{{/if}}

  <div class="patient-form">
    
    {{#if patient.pid}}
      <form action="/patients/modify/{{patient.pid}}" method="POST">
    {{else}}
      <form action="/patients/new" method="POST">
    {{/if}}

        <div>
          <label for="patfname">First name:</label>
          <input type="text" id="patfname" name="patfname" required 
                value="{{patient.pfname}}" />
        </div>

        <div>
          <label for="patlname">Last name:</label>
          <input type="text" id="patlname" name="patlname" required value="{{patient.plname}}" />
        </div>

        <div>
          <label for="patage">Age:</label>
          <input type="number" id="patage" name="patage" min="0" max="120" value="{{patient.page}}" />
        </div>

        <div>
          <label for="patgender">Gender:</label>
          <select id="patgender" name="patgender">
            {{!-- <option value="Female" {{#if (isEqual patient.pgender 'Female')}}selected{{/if}}>Female</option>
            <option value="Male" {{#if (isEqual patient.pgender 'Male')}}selected{{/if}}>Male</option> --}}
            <option value="Female">Female</option>
            <option value="Male">Male</option>
          </select>
        </div>

        <div>
          <label for="patcontact">Address:</label>
          <input type="text" id="patcontact" name="patcontact" value="{{patient.pcontact}}" />
        </div>

         <div>
          <label for="patphone">Phone:</label>
          <input type="text" id="patphone" name="patphone" value="{{patient.pphone}}" />
        </div>

        <div>
          <button type="submit">
            {{#if patient.pid}}Update patient{{else}}Add patient{{/if}}
          </button>
        </div>
      </form>

      <a href="/patients">Back to Patients</a>
  </div>
