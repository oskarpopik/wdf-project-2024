<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://use.typekit.net/zbq5ntv.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <title>MedHub</title>
  </head>
  <body>
    <header>
      <!-- The bootstrap navbar was done by adapting a W3School tutorial: https://www.w3schools.com/bootstrap5/bootstrap_navbar.php Accessed on 2024-10-11 -->
      <nav class="navbar navbar-expand-sm navbar-dark navbar-custom">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img class="logo" alt="MedHub logo" src="/img/logo-bg.jpg" />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapsibleNavbar"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
              {{#if session.isLoggedIn}}
                <li class="nav-item"><a
                    class="nav-link"
                    href="/patients"
                  >Patients</a></li>
              {{/if}}
              <li class="nav-item"><a
                  class="nav-link"
                  href="/doctors"
                >Doctors</a></li>
              {{#if session.isLoggedIn}}
                <li class="nav-item"><a
                    class="nav-link"
                    href="/treatments"
                  >Treatments</a></li>
              {{/if}}
              <li class="nav-item"><a
                  class="nav-link"
                  href="/about"
                >About</a></li>
              <li class="nav-item"><a
                  class="nav-link"
                  href="/contact"
                >Contact</a></li>
            </ul>
            <ul class="navbar-nav" id="menu-login">
              {{#if session.isLoggedIn}}
                <li class="nav-item login-section">
                  Hej
                  <span id="menu-user-name">{{session.name}}</span>!
                  <a class="nav-link" id="login-link" href="/logout">Logout</a>
                </li>
              {{else}}
                <li class="nav-item login-section">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>

    </header>
    {{{body}}}
  </body>
</html>