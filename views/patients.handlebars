<p>This is the patients site</p>
<h2>List of patients:</h2>
<div class="patient-new">
  {{#if session.isLoggedIn}}
    <a href="/patients/new" class="new-entry">New patient</a>
  {{/if}}
</div>
<div class="patient-list">
  <ol>
    {{!-- {{patient}} --}}
    {{#each patient}}
      <li>
        <a href="/patients/{{pid}}">{{pfname}} {{plname}} </a>
        {{#if ../session.isLoggedIn}}
        ---
        <a href="/patients/modify/{{pid}}" class="modify-entry">Modify</a>
        ---
        <a href="/patients/delete/{{pid}}" class="delete-entry">Delete</a>
        {{/if}}
      </li>
    {{/each}}
  </ol>
</div>